#section-footer > .Container {
  background: #282828;
}

.Footer__scrollTop {
  cursor: pointer;
  position: fixed;
  bottom: 34px;
  right: 20px;
  display: none;
  justify-content: center;
  align-items: center;
  top: auto;
  left: auto;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  background-color: #fff;
  z-index: 100;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
}

.Footer__scrollTop svg {
  display: block;
  width: 48%;
  height: 36%;
  margin-bottom: 2px;
  fill: #000;
}

.Footer__Background-Image {
  position: relative;
}

.Footer__Background-Image .ImageHero__ImageWrapper {
  mix-blend-mode: luminosity;
  background: rgba(0, 0, 0, 0.58) 0% 0% no-repeat padding-box;
  opacity: .5;
}

.Footer__Background-Image .TrustBadge__Wrapper,
.Footer__Background-Image .Footer__Inner {
  position: relative;
  z-index: 2;
}

.Footer__Background-Image .TrustBadge__Wrapper {
  height: auto;
  max-width: none;
  margin: 0 -10px;
}

.Footer__Background-Image .TrustBadge__Wrapper .TrustBadge__col{
