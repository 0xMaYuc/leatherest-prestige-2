<section class="Section sk_help Section--spacingNormal">
    <div class="FeatureText">
          <div class="FeatureText__ContentWrapper">
          <div class="FeatureText__Content"><header class="SectionHeader"><h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subline }}</h3><h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.headline }}</h2></header></div>
        </div>
          <div class="Section__ContactImages">
              <div class="FeatureText__ImageWrapper">
              <img class="Image--lazyLoaded" data-src="{{ section.settings.imagesupport | img_url: '300x' }}" alt="Kundensupport" src="{{ section.settings.imagesupport | img_url: '300x' }}">
  
              <noscript>
                  <img src="{{ section.settings.imagesupport | img_url: '300px' }}" alt="Kundensupport">
              </noscript>
  
              <span class="Contact__ImageTitle">{{ section.settings.pictext }}</span>
          </div>
          </div>
          <a class="Button Button--primary" href="{{ section.settings.helplink }}">{{ section.settings.btntext }}</a>
      </div>
  </section>
  
  <style>
    .sk_help {
      background: {{ section.settings.background }};
      padding: 50px 0;
    }

    
    .sk_help .Section__ContactImages {  
        max-width: 500px;
        margin: 0 auto 40px;
        display: flex;
        justify-content: center;
        flex-direction: row;
    }
  
  .sk_help .FeatureText__ImageWrapper {
    background: #fafafa;
    box-shadow: 0 5px 15px #00000026;
    display: flex;
    flex-direction: column;
    width: 50%;
    padding: 16px;
  }
  
  .sk_help .FeatureText__ContentWrapper {
    margin-bottom: 40px;
  }
  
  .sk_help .Contact__ImageTitle {
    margin-top: 15px;
  }
  </style>
  
  {% schema %}
  {
    "name": "custom_Help-Section",
    "settings": [
      {
        "type": "color",
        "id": "background",
        "label": "Hintergrund-Farbe",
        "default": "#ffffff"
      },
      {
        "type": "image_picker",
        "id": "imagesupport",
        "label": "Bild",
        "info": "220 x 150px .jpg empfohlen"
      },
      {
        "type": "text",
        "id": "headline",
        "label": "Überschrift",
        "default": "Überschrift"
      },
      {
        "type": "text",
        "id": "subline",
        "label": "Subline",
        "default": "Subline"
      },
      {
        "type": "text",
        "id": "pictext",
        "label": "Text",
        "default": "Text"
      },
      {
        "type": "text",
        "id": "btntext",
        "label": "Button Text",
        "default": "Jetzt kontaktieren"
      },
      {
        "type": "text",
        "id": "helplink",
        "label": "Link URL",
        "default": "mailto:support@leatherest.de"
      }
    ],
    "presets": [{
      "name": "custom_Help-Section",
      "category": "Custom"
    }]
  }
  {% endschema %}